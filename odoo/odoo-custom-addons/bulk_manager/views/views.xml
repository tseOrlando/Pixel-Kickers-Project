<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bulk_manager.list">
      <field name="name">Bulks</field>
      <field name="model">bulk_manager.bulk_manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="quantity" required="1"/>
          <field name="price" required="1"/>
          <field name="group" required="1"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="bulk_manager.action_window">
      <field name="name">Bulk Items</field>
      <field name="res_model">bulk_manager.bulk_manager</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="bulk_manager.action_server">
      <field name="name">Server</field>
      <field name="model_id" ref="model_bulk_manager_bulk_manager"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Bulk Manager" id="bulk_manager.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Bulks" id="bulk_manager.groups" parent="bulk_manager.menu_root"/>

  </data>
</odoo>