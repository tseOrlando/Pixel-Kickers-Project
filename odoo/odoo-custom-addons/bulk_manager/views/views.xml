<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="bulk_manager.list">
      <field name="name">bulk_manager list</field>
      <field name="model">bulk_manager.bulk_manager</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="bulk_manager.action_window">
      <field name="name">bulk_manager window</field>
      <field name="res_model">bulk_manager.bulk_manager</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="bulk_manager.action_server">
      <field name="name">bulk_manager server</field>
      <field name="model_id" ref="model_bulk_manager_bulk_manager"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="bulk_manager" id="bulk_manager.menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="bulk_manager.menu_1" parent="bulk_manager.menu_root"/>
    <menuitem name="Menu 2" id="bulk_manager.menu_2" parent="bulk_manager.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="bulk_manager.menu_1_list" parent="bulk_manager.menu_1"
              action="bulk_manager.action_window"/>
    <menuitem name="Server to list" id="bulk_manager" parent="bulk_manager.menu_2"
              action="bulk_manager.action_server"/>

  </data>
</odoo>