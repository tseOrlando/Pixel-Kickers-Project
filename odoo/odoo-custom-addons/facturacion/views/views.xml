<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="facturacion_venta_entradas_list_view">
      <field name="name">facturacion_venta_entradas.list</field>
      <field name="model">facturacion_venta_entradas.facturacion_venta_entradas</field>
      <field name="arch" type="xml">
        <tree>
          <field name="factura_numero"/>
          <field name="cliente_id"/>
          <field name="fecha_factura"/>
          <field name="total_euros"/>
          <field name="estado"/>
        </tree>
      </field>
    </record>

    <!-- form view definition -->

    <record model="ir.ui.view" id="facturacion_venta_entradas_form_view">
      <field name="name">facturacion_venta_entradas.form</field>
      <field name="model">facturacion_venta_entradas.facturacion_venta_entradas</field>
      <field name="arch" type="xml">
        <form>
          <sheet>
            <group>
              <field name="factura_numero"/>
              <field name="cliente_id"/>
              <field name="fecha_factura"/>
              <field name="total_euros"/>
              <field name="estado"/>
            </group>
          </sheet>
        </form>
      </field>
    </record>

    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="facturacion_venta_entradas_action">
      <field name="name">Facturación Ventas</field>
      <field name="res_model">facturacion_venta_entradas.facturacion_venta_entradas</field>
      <field name="view_mode">tree,form</field>
      <field name="view_id" ref="facturacion_venta_entradas_list_view"/>
    </record>

    <!-- server action to the one above -->

    <record model="ir.actions.server" id="facturacion_venta_entradas_server_action">
      <field name="name">Facturación Ventas Server Action</field>
      <field name="model_id" ref="model_facturacion_venta_entradas_facturacion_venta_entradas"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>

    <!-- Top menu item -->

    <menuitem name="Facturación Ventas" id="facturacion_venta_entradas_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Menu 1" id="facturacion_venta_entradas_menu_1" parent="facturacion_venta_entradas_menu_root"/>
    <menuitem name="Menu 2" id="facturacion_venta_entradas_menu_2" parent="facturacion_venta_entradas_menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="facturacion_venta_entradas_menu_1_list" parent="facturacion_venta_entradas_menu_1"
              action="facturacion_venta_entradas_action"/>
    <menuitem name="Server to list" id="facturacion_venta_entradas_menu_2_server" parent="facturacion_venta_entradas_menu_2"
              action="facturacion_venta_entradas_server_action"/>

  </data>
</odoo>
