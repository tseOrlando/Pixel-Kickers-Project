<odoo>
    <data>
        <record model="ir.ui.view" id="ventas_facturas_list">
            <field name="name">ventas_facturas list</field>
            <field name="model">ventas_facturas.ventas_facturas</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="numero_factura"/>
                    <field name="cliente"/>
                    <field name="fecha_factura"/>
                    <field name="categoria_id"/>
                    <field name="precio"/>
                    <field name="estado_factura"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="ventas_facturas_form">
            <field name="name">Sales Invoices Form</field>
            <field name="model">ventas_facturas.ventas_facturas</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="numero_factura"/>
                            <field name="cliente"/>
                            <field name="fecha_factura"/>
                            <field name="categoria_id"/>
                            <field name="precio"/>
                            <field name="estado_factura"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="ventas_facturas_action_window">
            <field name="name">Invoices</field>
            <field name="res_model">ventas_facturas.ventas_facturas</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record model="ir.ui.view" id="view_clientes_list">
            <field name="name">Customers List</field>
            <field name="model">clientes.cliente</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="last_name"/>
                    <field name="company_name"/>
                    <field name="mobile"/>
                    <field name="category_id"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="view_clientes_form">
            <field name="name">Customers Form</field>
            <field name="model">clientes.cliente</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="last_name"/>
                            <field name="company_name"/>
                            <field name="mobile"/>
                            <field name="category_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_clientes">
            <field name="name">Customers</field>
            <field name="res_model">clientes.cliente</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_clientes_list"/>
        </record>

        <menuitem name="FacturaciÃ³n" id="ventas_facturas_menu_root"/>

        <menuitem name="Invoicing" id="ventas_facturas_menu_ventas" parent="ventas_facturas_menu_root" action="ventas_facturas_action_window"/>

        <menuitem name="Customers" id="ventas_facturas_menu_clientes" parent="ventas_facturas_menu_root" action="action_clientes"/>
    </data>
</odoo>
