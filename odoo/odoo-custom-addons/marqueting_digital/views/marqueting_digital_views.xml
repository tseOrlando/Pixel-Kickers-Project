<odoo>
    <data>
        <!-- Vista de lista para Marqueting Digital -->
        <record model="ir.ui.view" id="marqueting_digital_list_view">
            <field name="name">marqueting.digital.list</field>
            <field name="model">marqueting_digital.marqueting_digital</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="value"/>
                    <field name="value2"/>
                </tree>
            </field>
        </record>

        <!-- Vista de formulario para Marqueting Digital -->
        <record model="ir.ui.view" id="marqueting_digital_form_view">
            <field name="name">marqueting.digital.form</field>
            <field name="model">marqueting_digital.marqueting_digital</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="value"/>
                            <field name="value2"/>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Emails">
                                <field name="email_ids">
                                    <tree>
                                        <field name="date"/>
                                        <field name="subject"/>
                                        <field name="sender"/>
                                    </tree>
                                    <form>
                                        <group>
                                            <field name="date"/>
                                            <field name="subject"/>
                                            <field name="sender"/>
                                            <field name="content"/>
                                            <field name="recipient"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Vista de formulario para Email -->
        <record id="view_email_form" model="ir.ui.view">
            <field name="name">email.form</field>
            <field name="model">marqueting_digital.email</field>
            <field name="arch" type="xml">
                <form string="Email">
                    <sheet>
                        <group>
                            <field name="date"/>
                            <field name="subject"/>
                            <field name="sender"/>
                            <field name="content"/>
                            <field name="recipient"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Acción para abrir la vista de lista -->
        <record model="ir.actions.act_window" id="marqueting_digital_action_window">
            <field name="name">Marqueting Digital</field>
            <field name="res_model">marqueting_digital.marqueting_digital</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- Menú principal -->
        <menuitem name="Marqueting Digital" id="marqueting_digital_menu_root"/>

        <!-- Submenú para los registros de Marqueting Digital -->
        <menuitem name="Emails" id="marqueting_digital_menu_emails" parent="marqueting_digital_menu_root"
                  action="marqueting_digital_action_window"/>
    </data>
</odoo>
