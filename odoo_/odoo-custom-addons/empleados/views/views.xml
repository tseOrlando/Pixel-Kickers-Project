<!-- views/views.xml -->
<odoo>
    <!-- Acción para la vista de empleados -->
    <record id="action_employee" model="ir.actions.act_window">
        <field name="name">Employees</field>
        <field name="res_model">employee.management</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- Vista de formulario de empleados -->
    <record id="view_employee_form" model="ir.ui.view">
        <field name="name">employee.form</field>
        <field name="model">employee.management</field>
        <field name="arch" type="xml">
            <form string="Employee Form">
                <sheet>
                    <group>
                        <div style="display: flex; justify-content: space-between; align-items: flex-start;">
                            <field name="image" widget="image" style="max-width: 150px; max-height: 300px; display: block;" options="{'preview_image': 'image'}"/>
                        </div>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="job_title"/>
                        <field name="department"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista de empleados -->
    <record id="view_employee_tree" model="ir.ui.view">
        <field name="name">employee.tree</field>
        <field name="model">employee.management</field>
        <field name="arch" type="xml">
            <tree string="Employee List">
                <field name="name"/>
                <field name="age"/>
                <field name="job_title"/>
                <field name="department"/>
            </tree>
        </field>
    </record>

    <!-- Menú para la gestión de empleados -->
    <menuitem id="menu_employee_management" name="Employee Management" sequence="1"/>
    <menuitem id="menu_employees" name="Employees" parent="menu_employee_management" action="action_employee"/>
</odoo>